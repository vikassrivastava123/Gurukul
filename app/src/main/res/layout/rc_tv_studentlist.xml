<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/headerOfList"
    card_view:cardBackgroundColor="@color/lineColor"
    android:layout_below="@+id/inputInfo"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    card_view:cardCornerRadius="4dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:text="Name"
            android:layout_toLeftOf="@+id/dummyView"
            android:paddingTop="15dp"
            android:paddingLeft="20dp"
            android:id="@+id/nameOfStudent"
            android:textStyle="bold"

            />

        <View
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:id="@+id/dummyView"
            android:layout_centerHorizontal="true"
            >
        </View>

        <TextView
            android:layout_width="155dp"
            android:layout_height="55dp"
            android:text="Roll Number"
            android:layout_toRightOf="@+id/dummyView"
            android:layout_marginLeft="65dp"
            android:paddingTop="15dp"
            android:textStyle="bold"
            android:id="@+id/rollNumber"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>



